extends layout

block content
  header.main-header
    nav.main-header__nav

      

  main
    h1 This is main page of #{title}
    h1 debug: #{fileName}
    h1 upload
    form(action="/upload" method='POST' enctype="multipart/form-data") 
      input(type="file" name="image")
      input(type="submit" value="upload")
    #show-header
      #show-header-left
      #show-header-right
        button#editable Allow Edit
          script.
            $('#editable').on('click', editSwitch) 
    div(style="margin-top: 10px;")     
        
    .show
      #left.file-show 
        .display-inline-block
          .file-show-container 
            img.image(src=originPath, alt="")
            #left-highlight.highlight 
              style(type="text/css").
                #left-highlight {
                  margin-left: 0px;
                  margin-top: 0px;
                  width: 100px;
                  height: 100px;

                }
          

      .seperator

      #right.file-show
        .display-inline-block
          #right-image.file-show-container(contenteditable="false")
            img(src=blurPath, alt="").image
            each paragraph in paragraphs 
              .parag(style=paragraph.style) #{paragraph.text_trans}
            #right-highlight.highlight 
              style(type="text/css").
                #right-highlight {
                  margin-left: 0px;
                  margin-top: 0px;
                  width: 100px;
                  height: 100px;
                }

    //- .download 
    //-   form(action='/download/' + fileName)
    //-     input(type="submit" value="download")

    button#download Download
          script.
            $('#download').on('click', PrintDiv)


  script.
    $(".highlight").hover(function() {
      $("#left-highlight").css("opacity","50%");
      $("#right-highlight").css("opacity","50%");
    },
    function() {
      $("#left-highlight").css("opacity","0%");
      $("#right-highlight").css("opacity","0%");
    });

